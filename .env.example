# Example environment variables for frontend
# Copy to .env.local (or set in your Vite environment) and fill values
VITE_API_URL=http://localhost:4000
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_unsigned_upload_preset
# Optional: signed upload endpoint (frontend will also try VITE_API_URL/sign as fallback)
# Example: VITE_CLOUDINARY_SIGN_URL=http://localhost:4000/sign
# When using signed uploads, do NOT set the upload preset in the frontend.

# Payment provider (json-server backend)
PAYMENT_PROVIDER=stripe
# false = paiement provider r√©el obligatoire (pas de simulation)
# true = autorise une simulation locale (dev uniquement)
PAYMENT_ALLOW_SIMULATION=false

# Stripe
STRIPE_BASE_URL=https://api.stripe.com
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_test_xxx

# Wave
WAVE_BASE_URL=https://api.wave.com
WAVE_SECRET=wave_test_xxx
WAVE_WEBHOOK_SECRET=wave_whsec_xxx

# Orange Money
ORANGE_BASE_URL=https://api.orange.com
ORANGE_SECRET=orange_test_xxx
ORANGE_WEBHOOK_SECRET=orange_whsec_xxx
