# Backend API (backend/src/index.mjs)

# Server
PORT=4000
NODE_ENV=development
APP_BASE_URL=http://localhost:4000
PUBLIC_BASE_URL=http://localhost:4000

# Payment provider
PAYMENT_PROVIDER=stripe
# true  => simulation provider autorisee (developpement)
# false => appels reels aux providers
PAYMENT_ALLOW_SIMULATION=true

# Cloudinary (recommande: URL complete)
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME

# Cloudinary (fallback si CLOUDINARY_URL absent)
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_CLOUD_NAME=

# Fallbacks legacy (si partage avec variables front)
VITE_CLOUDINARY_API_KEY=
VITE_CLOUDINARY_CLOUD_NAME=

# Stripe
STRIPE_BASE_URL=https://api.stripe.com
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

